{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "jsx": "react",
    "rootDir": "src",
    "outDir": "lib",
  },
  "include": [
    "src"
  ]
}